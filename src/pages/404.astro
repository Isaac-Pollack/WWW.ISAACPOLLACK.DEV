---
import Master from "@layouts/Master.astro";
---

<Master
	title="Isaac Pollack - Portfolio"
	description="My portfolio website, created using the Astro framework, TailwindCSS and a little bit of the ol' noggin.">
	<div
		class="bg-white dark:bg-slate-900 rounded-lg drop-shadow-xl p-5 md:p-14 mx-2">
		<div class="text-center">
			<h1 class="text-2xl m-4">Oops! This page doesn't exist!</h1>
			<div class="m-3">
				<a
					href="javascript:history.back()"
					rel="noopener noreferrer"
					aria-label={`link to ${Astro.url.origin}`}>
					<button
						type="button"
						class="shadow-md text-white bg-sky-600 hover:bg-sky-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mt-4 text-2xl transition-transform ease-in-out hover:-translate-y-1 duration-300">
						Back to safety!
					</button>
				</a>
			</div>
		</div>
	</div>
</Master>
