---
const { emoji, title } = Astro.props;
---

<div class="transition hover:bg-indigo-200 dark:hover:bg-gray-900 my-4 rounded">
	<div
		class="accordion-header cursor-pointer transition flex space-x-5 px-5 items-center h-16">
		<i class="fas fa-plus"></i>
		<h2 class="font-bold font-soehne">{emoji} {title}</h2>
	</div>
	<!-- Content -->
	<div class="accordion-content overflow-hidden max-h-0">
		<slot />
	</div>
</div>
